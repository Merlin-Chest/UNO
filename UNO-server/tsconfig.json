{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2016",
    "lib": [ "ESNext"],
    "strict": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "express","node"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
